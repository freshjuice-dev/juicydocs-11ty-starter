---
layout: layouts/page.njk
title: Changelog
description: Latest updates and releases
date: false
pagination:
    data: collections.changelogByDateDescending
    size: 20
    alias: releases
permalink: "changelog/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---
<ul class="list-none space-y-4 ps-0">
    {% for item in releases %}
        <li>
            <a href="{{ item.url }}" class="block p-4 rounded-lg border border-slate-200 no-underline hover:border-slate-300 hover:bg-slate-50 dark:border-neutral-700 dark:hover:border-neutral-600 dark:hover:bg-neutral-800/50">
                <div class="flex items-center justify-between gap-4 mb-1">
                    <strong class="text-lg text-slate-900 dark:text-neutral-100">
                        {{ item.data.title }}
                    </strong>
                    <time datetime="{{ item.page.date | dateToISOString }}" class="text-sm text-slate-500 dark:text-neutral-500">
                        {{ item.page.date | dateString }}
                    </time>
                </div>
                {% if item.data.description %}
                    <p class="text-slate-600 dark:text-neutral-400 text-sm m-0">
                        {{ item.data.description }}
                    </p>
                {% endif %}
            </a>
        </li>
    {% endfor %}
</ul>

{% if pagination.pages.length > 1 %}
    <nav class="flex gap-2 mt-8">
        {% for pageEntry in pagination.pages %}
            <a href="{{ pagination.hrefs[loop.index0] }}"
               class="px-3 py-1 rounded text-sm no-underline border border-slate-200 dark:border-neutral-700 {% if page.url == pagination.hrefs[loop.index0] %}bg-slate-200 dark:bg-neutral-700{% else %}hover:bg-slate-100 dark:hover:bg-neutral-800{% endif %}"
               {% if page.url == pagination.hrefs[loop.index0] %}aria-current="page"{% endif %}>
                {{ loop.index }}
            </a>
        {% endfor %}
    </nav>
{% endif %}
