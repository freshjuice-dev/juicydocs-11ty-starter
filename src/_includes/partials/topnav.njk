{#- Top Navigation Bar -#}

<header class="sticky top-0 z-50 w-full border-b border-slate-900/10 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60 dark:border-neutral-50/10 dark:bg-neutral-950/75">
    <div class="mx-auto flex h-14 max-w-9xl items-center justify-between px-4 sm:px-6 lg:px-8">

        {#- Logo / Site Title -#}
        <div class="flex flex-1 items-center gap-4">
            {#- Mobile menu toggle -#}
            <button type="button"
                    id="mobile-menu-toggle"
                    class="lg:hidden -ml-2 flex h-8 w-8 items-center justify-center rounded-md text-slate-500 hover:text-slate-600 dark:text-neutral-400 dark:hover:text-neutral-300"
                    aria-label="Toggle navigation">
                {% phosphor "list", "bold", { size: 20 } %}
            </button>

            <a href="/" class="flex items-center gap-2 font-semibold text-slate-900 no-underline dark:text-white min-w-10 shrink-0">
                <img src="/assets/images/juicydocs-logo.png"
                     alt="{{ metadata.title }} logo"
                     eleventy:widths="84"
                     class="size-10 shrink-0">
                {{ metadata.title }}
            </a>
        </div>

        {#- Center: Search trigger (desktop) -#}
        <search-trigger class="hidden lg:block lg:max-w-md lg:flex-auto"></search-trigger>

        {#- Right: Links -#}
        <nav class="flex flex-1 justify-end items-center gap-1">
            {#- RSS Feed -#}
            <a href="/feed.xml"
               class="hidden px-3 py-2 text-sm font-medium text-slate-700 no-underline hover:text-slate-900 dark:text-neutral-400 dark:hover:text-neutral-300 sm:block">
                RSS
            </a>

            {#- Navigation links -#}
            {% for item in navigation.topnav %}
                <a href="{{ item.url }}"
                   class="hidden px-3 py-2 text-sm font-medium text-slate-700 no-underline hover:text-slate-900 dark:text-neutral-400 dark:hover:text-neutral-300 sm:block"
                   {% if item.url | isExternalUrl %}target="_blank" rel="noopener"{% endif %}>
                    {{ item.text }}
                </a>
            {% endfor %}

        </nav>
    </div>
</header>
